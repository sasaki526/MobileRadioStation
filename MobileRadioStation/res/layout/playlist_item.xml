<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_playlist_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/img_now_playing"
        android:layout_width="@dimen/nowplaying_icon_size"
        android:layout_height="@dimen/nowplaying_icon_size"/>

    <TextView
        android:id="@+id/txt_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/txt_elapsed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_s"
        android:paddingBottom="@dimen/margin_s"
        android:paddingLeft="@dimen/margin_m"
        android:paddingRight="@dimen/margin_m"
        android:text="@string/minus"
        android:textSize="@dimen/songlist_add_btn_size"
        android:textStyle="bold" />

</LinearLayout>