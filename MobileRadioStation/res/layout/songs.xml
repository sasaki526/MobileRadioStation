<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/song_name"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
		android:layout_weight="1"
		android:ellipsize="end"
		android:singleLine="true"
		android:textSize="@dimen/songlist_text_size" />

	<TextView
		android:id="@+id/song_duration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/margin_s"
		android:singleLine="true"
		android:textSize="@dimen/songduration_text_size"/>

	<TextView
		android:id="@+id/txt_add_track1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/margin_s"
		android:text="@string/plus"
		android:textSize="@dimen/songlist_add_btn_size"
		android:textStyle="bold"
		android:textColor="@color/track1" />


	<TextView
		android:id="@+id/txt_add_track2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/margin_s"
		android:text="@string/plus"
		android:textSize="@dimen/songlist_add_btn_size"
		android:textStyle="bold"
		android:textColor="@color/track2" />
</LinearLayout>
